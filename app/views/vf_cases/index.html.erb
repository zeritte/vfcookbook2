<p id="notice"><%= notice %></p>

<h1>Vf Cases</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Case class</th>
      <th>Is active</th>
      <th>Domain</th>
      <th>Impact</th>
      <th>Tctype</th>
      <th>Number of solutions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vf_cases.each do |vf_case| %>
      <tr>
        <td><%= vf_case.name %></td>
        <td><%= vf_case.case_class %></td>
        <td><%= vf_case.is_active %></td>
        <td><%= vf_case.domain.name %></td>
        <td><%= vf_case.impact.name %></td>
        <td><%= vf_case.tctype.name %></td>
        <td><%= vf_case.solutions.count %></td>
        <td><%= link_to 'Show', vf_case %></td>
        <% if current_user && current_user.admin? %>
          <td><%= link_to 'Edit', edit_vf_case_path(vf_case) %></td>
          <td><%= link_to 'Destroy', vf_case, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user && current_user.admin? %>
  <%= link_to 'New Vf Case', new_vf_case_path %>
<% end %>
<p><%= link_to 'Solutions', solutions_path %></p>
<p><%= link_to 'Users', users_path %></p>
<% if user_signed_in? %>
<p><%= link_to 'Sign out', destroy_user_session_path, method: :delete, data: { confirm: 'Are you sure?' } %></p>
<% else %>
<p><%= link_to 'Sign in', new_user_session_path, method: :post %></p>
<p><%= link_to 'Sign up', new_user_registration_path, method: :get %></p>
<% end %>
