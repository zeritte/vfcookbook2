<p id="notice"><%= notice %></p>

<h1>Solutions</h1>

<table>
  <thead>
    <tr>
      <th>Before en</th>
      <th>After en</th>
      <th>Before de</th>
      <th>After de</th>
      <th>Vf case</th>
      <th>Description</th>
      <th>Created By</th>
      <th>Is approved</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @solutions.each do |solution| %>
      <tr>
        <td><%= solution.before_en %></td>
        <td><%= solution.after_en %></td>
        <td><%= solution.before_de %></td>
        <td><%= solution.after_de %></td>
        <td><%= solution.vf_case.name %></td>
        <td><%= User.find(solution.created_by_id).name %></td>
        <td><%= solution.is_approved %></td>
        <td><%= link_to 'Show', solution %></td>
        <% if current_user %>
        <td><%= link_to 'Edit', edit_solution_path(solution) %></td>
        <td><%= link_to 'Destroy', solution, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<p><%= link_to 'Cases', vf_cases_path %></p>
<% if current_user %>
  <%= link_to 'New Solution', new_solution_path %>
<% end %>
